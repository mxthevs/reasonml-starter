{
  "name": "reason-starter",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "watch": "esy dune build -p #{self.name} -w",
    "doc": "esy dune build @doc",
    "utop": "esy dune utop lib -- -implicit-bindings"
  },
  "dependencies": {
    "ocaml": "4.10.x",
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/dune": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "*",
    "@opam/rtop": "*",
    "@opam/odoc": "*"
  }
}
